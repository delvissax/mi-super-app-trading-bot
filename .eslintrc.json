{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "es2024": true,
    "node": true,
    "jest": true,
    "mocha": true,
    "serviceworker": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:promise/recommended",
    "plugin:regexp/recommended",
    "plugin:security/recommended",
    "plugin:unicorn/recommended",
    "plugin:sonarjs/recommended",
    "plugin:optimize-regex/recommended",
    "plugin:you-dont-need-lodash-underscore/compatible",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "import",
    "security",
    "unicorn",
    "sonarjs",
    "no-secrets",
    "perfectionist",
    "deprecation",
    "optimize-regex",
    "promise",
    "regexp",
    "array-func",
    "eslint-comments",
    "no-use-extend-native",
    "xss"
  ],
  "parserOptions": {
    "ecmaVersion": 2024,
    "sourceType": "module",
    "requireConfigFile": false,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      "impliedStrict": true
    },
    "babelOptions": {
      "presets": ["@babel/preset-env", "@babel/preset-react"],
      "plugins": [
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-optional-chaining",
        "@babel/plugin-proposal-nullish-coalescing-operator"
      ]
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".mjs", ".cjs"],
        "moduleDirectory": ["node_modules", "src/"]
      },
      "alias": {
        "map": [
          ["@", "./src"],
          ["@components", "./src/components"],
          ["@utils", "./src/utils"],
          ["@hooks", "./src/hooks"],
          ["@services", "./src/services"],
          ["@assets", "./src/assets"],
          ["@config", "./src/config"],
          ["@constants", "./src/constants"],
          ["@types", "./src/types"]
        ],
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".mjs"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js", "**/__tests__/**", "**/__mocks__/**"],
      "env": {
        "jest": true
      },
      "rules": {
        "max-lines": "off",
        "max-statements": "off",
        "max-lines-per-function": "off",
        "sonarjs/no-duplicate-string": "off",
        "no-magic-numbers": "off",
        "max-nested-callbacks": "off",
        "complexity": "off"
      }
    },
    {
      "files": [
        "**/*.config.js",
        "**/webpack.config.js",
        "**/vite.config.js",
        "**/rollup.config.js"
      ],
      "rules": {
        "import/no-commonjs": "off",
        "unicorn/prefer-module": "off",
        "no-console": "off",
        "import/no-unresolved": "off"
      }
    },
    {
      "files": ["**/scripts/**", "**/build/**"],
      "rules": {
        "no-console": "off",
        "no-process-exit": "off",
        "unicorn/no-process-exit": "off"
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "extends": ["plugin:@typescript-eslint/recommended"],
      "rules": {
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
            "vars": "all",
            "args": "after-used",
            "argsIgnorePattern": "^_",
            "caughtErrors": "all",
            "caughtErrorsIgnorePattern": "^_",
            "destructuredArrayIgnorePattern": "^_"
          }
        ]
      }
    }
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "caughtErrors": "all",
        "caughtErrorsIgnorePattern": "^_",
        "destructuredArrayIgnorePattern": "^_"
      }
    ],
    "no-console": ["warn", { "allow": ["warn", "error", "info", "table"] }],
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-undef": "error",
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "curly": ["error", "all"],
    "no-var": "error",
    "no-implicit-coercion": "error",
    "no-param-reassign": ["error", { "props": true }],
    "no-return-await": "error",
    "no-throw-literal": "error",
    "prefer-promise-reject-errors": "error",
    "complexity": ["warn", 18],
    "max-depth": ["warn", 4],
    "max-lines": ["warn", { "max": 350, "skipBlankLines": true, "skipComments": true }],
    "max-lines-per-function": [
      "warn",
      {
        "max": 60,
        "skipBlankLines": true,
        "skipComments": true,
        "IIFEs": true
      }
    ],
    "max-params": ["warn", 4],
    "max-nested-callbacks": ["warn", 3],
    "max-statements": ["warn", 20],
    "no-magic-numbers": [
      "warn",
      {
        "ignore": [-1, 0, 1, 2, 10, 100, 1000, 24, 60, 1000, 1024],
        "ignoreArrayIndexes": true,
        "ignoreDefaultValues": true,
        "enforceConst": true
      }
    ],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-constructor-return": "error",
    "no-duplicate-imports": "off",
    "no-self-compare": "error",
    "no-template-curly-in-string": "warn",
    "no-unreachable-loop": "error",
    "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
    "require-atomic-updates": "error",
    "accessor-pairs": "error",
    "array-callback-return": "error",
    "block-scoped-var": "error",
    "consistent-return": "error",
    "default-case-last": "error",
    "default-param-last": "error",
    "dot-notation": "error",
    "grouped-accessor-pairs": "error",
    "guard-for-in": "error",
    "no-alert": "warn",
    "no-caller": "error",
    "no-else-return": ["error", { "allowElseIf": false }],
    "no-empty-function": "warn",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-floating-decimal": "error",
    "no-implicit-globals": "error",
    "no-invalid-this": "error",
    "no-iterator": "error",
    "no-labels": "error",
    "no-lone-blocks": "error",
    "no-loop-func": "error",
    "no-multi-str": "error",
    "no-new": "error",
    "no-new-wrappers": "error",
    "no-octal-escape": "error",
    "no-proto": "error",
    "no-return-assign": "error",
    "no-sequences": "error",
    "no-unmodified-loop-condition": "error",
    "no-useless-call": "error",
    "no-useless-concat": "error",
    "no-useless-return": "error",
    "no-void": "error",
    "prefer-regex-literals": "error",
    "radix": "error",
    "yoda": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling"],
          "index",
          "object",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "newlines-between": "always",
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    "import/no-unresolved": "error",
    "import/no-cycle": ["error", { "maxDepth": 3 }],
    "import/no-default-export": "off",
    "import/no-named-as-default": "error",
    "import/no-named-as-default-member": "error",
    "import/no-duplicates": "error",
    "import/no-namespace": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-anonymous-default-export": "warn",
    "import/no-mutable-exports": "error",
    "import/no-unused-modules": ["warn", { "unusedExports": true }],
    "import/no-webpack-loader-syntax": "error",
    "unicorn/prevent-abbreviations": [
      "error",
      {
        "replacements": {
          "props": false,
          "ref": false,
          "refs": false,
          "env": false,
          "params": false,
          "arg": false,
          "args": false,
          "e": false,
          "err": false,
          "req": false,
          "res": false,
          "ctx": false,
          "db": false,
          "i": false,
          "j": false,
          "idx": false
        }
      }
    ],
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "camelCase": true,
          "pascalCase": true,
          "kebabCase": true
        },
        "ignore": ["README.md", "CHANGELOG.md", "LICENSE", "package.json", "tsconfig.json"]
      }
    ],
    "unicorn/no-null": "off",
    "unicorn/prefer-module": "error",
    "unicorn/prefer-node-protocol": "error",
    "unicorn/prefer-top-level-await": "error",
    "unicorn/consistent-function-scoping": "error",
    "unicorn/custom-error-definition": "error",
    "unicorn/error-message": "error",
    "unicorn/escape-case": "error",
    "unicorn/expiring-todo-comments": "warn",
    "unicorn/no-array-for-each": "error",
    "unicorn/no-for-loop": "error",
    "unicorn/prefer-array-find": "error",
    "unicorn/prefer-array-flat": "error",
    "unicorn/prefer-array-some": "error",
    "unicorn/prefer-date-now": "error",
    "unicorn/prefer-includes": "error",
    "unicorn/prefer-string-slice": "error",
    "unicorn/prefer-switch": "error",
    "unicorn/throw-new-error": "error",
    "sonarjs/cognitive-complexity": ["error", 18],
    "sonarjs/no-duplicate-string": ["warn", { "threshold": 4 }],
    "sonarjs/no-identical-functions": "error",
    "sonarjs/no-collapsible-if": "error",
    "sonarjs/no-collection-size-mischeck": "error",
    "sonarjs/no-redundant-boolean": "error",
    "sonarjs/no-unused-collection": "error",
    "sonarjs/prefer-immediate-return": "error",
    "sonarjs/prefer-object-literal": "error",
    "sonarjs/prefer-single-boolean-return": "error",
    "no-secrets/no-secrets": ["error", { "tolerance": 4.2 }],
    "deprecation/deprecation": "warn",
    "promise/always-return": "error",
    "promise/no-return-wrap": "error",
    "promise/param-names": "error",
    "promise/catch-or-return": "error",
    "promise/no-native": "off",
    "promise/no-nesting": "warn",
    "promise/no-promise-in-callback": "warn",
    "promise/no-callback-in-promise": "warn",
    "promise/avoid-new": "off",
    "promise/no-new-statics": "error",
    "promise/no-return-in-finally": "warn",
    "promise/valid-params": "warn",
    "regexp/no-dupe-disjunctions": "error",
    "regexp/no-empty-alternative": "error",
    "regexp/no-escape-backspace": "error",
    "regexp/no-lazy-ends": "error",
    "regexp/no-optional-assertion": "error",
    "regexp/no-potentially-useless-backreference": "error",
    "regexp/no-useless-assertions": "error",
    "regexp/no-useless-flag": "error",
    "regexp/optimal-quantifier-concatenation": "error",
    "regexp/prefer-predefined-assertion": "error",
    "array-func/from-map": "error",
    "array-func/no-unnecessary-this-arg": "error",
    "array-func/prefer-array-from": "error",
    "array-func/avoid-reverse": "error",
    "eslint-comments/disable-enable-pair": "error",
    "eslint-comments/no-duplicate-disable": "error",
    "eslint-comments/no-unlimited-disable": "error",
    "eslint-comments/no-unused-disable": "error",
    "no-use-extend-native/no-use-extend-native": "error",
    "xss/no-mixed-html": "warn",
    "xss/no-location-href-assign": "error",
    "sort-imports": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": false,
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf",
        "bracketSameLine": false,
        "jsxSingleQuote": false
      }
    ],
    "no-await-in-loop": "error",
    "no-promise-executor-return": "error",
    "no-nested-ternary": "warn",
    "no-unneeded-ternary": "error",
    "prefer-const": "error",
    "prefer-template": "error",
    "object-shorthand": ["error", "always"],
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": false }],
    "prefer-destructuring": [
      "warn",
      {
        "array": true,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "prefer-exponentiation-operator": "error",
    "prefer-numeric-literals": "error",
    "prefer-object-spread": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    "symbol-description": "error",
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "no-useless-rename": "error"
  }
}
